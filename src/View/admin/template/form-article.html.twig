<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <form action="" method="post">
            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0"><input name="title"
                                                                                                   type="text"
                                                                                                   value="{{ article.title }}">
            </h2>

            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Portfolio Grid Items-->
            <div class="justify-content-center">
                <div>
                    <label for="header"><h3>Header: </h3></label>
                    <textarea name="header" id="header" rows="2" style="width: 100%;"
                              class="mb-2">{{ article.header }}</textarea><br>
                    <label for="content"><h3>Contenu: </h3></label>
                    <textarea name="content" rows="10" id="content" style="width: 100%;"
                              class="mb-2">{{ article.content }}</textarea>
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status"
                       id="flexRadioDefault1" {{ default }} {% if article.status == "waiting" %} {{ "checked" }} {% endif %}
                       value="waiting">
                <label class="form-check-label" for="flexRadioDefault1">
                    En attente
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status"
                       id="flexRadioDefault1" {% if article.status == "published" %} {{ "checked" }} {% endif %}
                       value="published">
                <label class="form-check-label" for="flexRadioDefault1">
                    PubliÃ©
                </label>
            </div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="{{ action }}" class="btn btn-primary">
            </div>
        </form>
    </div>
</section>
